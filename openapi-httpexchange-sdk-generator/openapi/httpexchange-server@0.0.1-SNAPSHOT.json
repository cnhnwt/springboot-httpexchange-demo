{
  "openapi": "3.0.1",
  "info": {
    "title": "用户管理服务 API",
    "description": "HttpExchange Server - 提供用户管理的核心接口服务",
    "contact": {
      "name": "开发团队",
      "email": "dev@example.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8181",
      "description": "本地开发服务器"
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "tags": ["user-controller"],
        "summary": "获取所有用户列表",
        "description": "获取所有用户列表",
        "operationId": "getAllUsers",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["user-controller"],
        "summary": "创建新用户",
        "description": "创建新用户",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "tags": ["user-controller"],
        "summary": "根据ID获取用户详情",
        "description": "根据ID获取用户详情",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "用户唯一标识",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": ["user-controller"],
        "summary": "更新用户信息",
        "description": "更新用户信息",
        "operationId": "updateUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "用户唯一标识",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": ["user-controller"],
        "summary": "删除用户",
        "description": "删除用户",
        "operationId": "deleteUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "用户唯一标识",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "description": "用户实体类",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "用户唯一标识"
          },
          "username": {
            "type": "string",
            "description": "用户名，用于登录和显示"
          },
          "email": {
            "type": "string",
            "description": "用户邮箱地址"
          },
          "fullName": {
            "type": "string",
            "description": "用户真实姓名"
          },
          "status": {
            "type": "string",
            "description": "用户状态：ACTIVE-活跃，INACTIVE-未激活，DISABLED-已禁用"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "用户创建时间"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "用户信息最后更新时间"
          }
        }
      },
      "CreateUserRequest": {
        "type": "object",
        "description": "创建用户请求",
        "required": ["username", "email"],
        "properties": {
          "username": {
            "type": "string",
            "description": "用户名，必填，长度3-50个字符"
          },
          "email": {
            "type": "string",
            "description": "邮箱地址，必填，需符合邮箱格式"
          },
          "fullName": {
            "type": "string",
            "description": "用户真实姓名，可选"
          }
        }
      },
      "UpdateUserRequest": {
        "type": "object",
        "description": "更新用户请求",
        "properties": {
          "username": {
            "type": "string",
            "description": "用户名，可选，长度3-50个字符"
          },
          "email": {
            "type": "string",
            "description": "邮箱地址，可选，需符合邮箱格式"
          },
          "fullName": {
            "type": "string",
            "description": "用户真实姓名，可选"
          },
          "status": {
            "type": "string",
            "description": "用户状态：ACTIVE-活跃，INACTIVE-未激活，DISABLED-已禁用"
          }
        }
      }
    }
  }
}